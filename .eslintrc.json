{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": ["**/__mocks__/**", "node_modules/**", "dist/**"],
    "rules": {
       "semi": ["error", "never"]
    }
}
